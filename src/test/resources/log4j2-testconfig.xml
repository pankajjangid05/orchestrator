<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.uci.orchestrator" status="info" name="spring-boot-kafka-log">
	<Appenders>
		<Console name="stdout" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} stdout %highlight(%-5p) [%-7t] %F:%L - %m%n" />
		</Console>

		<Console name="stderr" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} stderr %highlight(%-5p) [%-7t] %F:%L - %m%n" />
		</Console>
	</Appenders>
</Configuration>